{
  "name": "ishiro-frontend",
  "private": true,
  "description": "üê∫ Ishiro is a platform that helps tracking anime advancement.",
  "license": "GPL-3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "cd apps/mobile && expo start",
    "web": "cd apps/web && yarn next",
    "lint": "eslint \"{apps,packages}/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-native": "^0.67.2",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "import-sort-style-module-alias": "^1.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "turbo": "^1.1.6",
    "typescript": "^4.6.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module-alias",
      "parser": "typescript",
      "options": {
        "alias": [
          "app"
        ]
      }
    }
  }
}
